--выделить запрос, который нужен и нажать стрелочку
drop table person;

--автогенерация ключа Id
--GENERATED BY DEFAULT AS IDENTITY

create table person(
                       id  GENERATED BY DEFAULT AS IDENTITY,
                       name varchar,
                       age int,
                       email varchar
);

select * from person;

SELECT *FROM PERSON where id=1;

UPDATE person  SET name='aleksa', age=2, email='aleksa@email.ru' WHERE ID=1;

DELETE FROM person WHERE id=2;

insert into person (name, age, email) values ('Aleksa',40,'aleksa@email.ru');
insert into person (name, age, email) values ('Edvard',44, 'edvard@email.ru');
insert into person (name, age, email) values ('Evgeny', 33, 'evgeny@email.ru');
insert into person (name, age, email) values ('Egor', 33, 'egor@email.ru');
